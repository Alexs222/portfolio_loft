extends ../template

block variables
    - var title = 'Мои работы'

block content
    .wrapper
        .maincontent
            section.section.hero
                .socials
                    include ../common/_socials
                .hamburger
                    a.hamburger__link.hero__menu(href="#")
                        .hamburger__bars
                .hero__fon
                    svg.hero__icon
                        use(xlink:href="assets/images/icons/sprite.svg#portfolio_header")
                .user.hero-user
                     include ../common/_user
                .arrow-down.hero__scroll-btn
                    include ../common/_arrow_down
                .traingle
                    svg.traingle-svg(xmlns='http://www.w3.org/2000/svg', viewbox='0 0 1000 85', preserveaspectratio='none')
                        polygon.traingle-svg__left.traingle-svg__work-fill(points='0,0   0,86   500.8,86   500.8,75.5')
                        polygon.traingle-svg__right.traingle-svg__work-fill(points='1000,0   1000,86   500,86   500,75.5')

            section.section.slider
                .slider__title
                    .slider__title-wrap
                        svg.svg-dash
                            use(xlink:href="assets/images/icons/sprite.svg#dash")
                        h1.title-main мои работы
                        svg.svg-dash
                            use(xlink:href="assets/images/icons/sprite.svg#dash")
                        svg.slider__title-icon
                            use(xlink:href="assets/images/icons/sprite.svg#works_header")
                .slider__main
                    .slider__comtainer
                        .slider__go
                            .slider__go-container
                                ul.slider-go__list
                                    li.slider-go__item
                                        .slider-go__title
                                            svg.svg-dash
                                                use(xlink:href="assets/images/icons/sprite.svg#dash")
                                            .title-sub-main.title-sub-main_slider-go  сайт школы онлайн образования 
                                            svg.svg-dash
                                                use(xlink:href="assets/images/icons/sprite.svg#dash")
                                        .slider-go__instruments html, css, javascript
                                        .slider-go__butt
                                            a.slider-go__link(href="#")
                                                svg.svg-link(width="21px" height="21px")
                                                    use(xlink:href="assets/images/icons/sprite.svg#link")
                                                span.slider-go__link-text Посмотреть сайт
                        .slider-demo__main
                            img.slider-demo__img(src="assets/images/my-works/work-1.png", alt="work-1")

                        .slider-demo__control
                            .slider-demo__control-prev
                                img.slider-demo__img(src="assets/images/my-works/work-2.png", alt="work-2")
                                a.slider-demo__link(href="#")
                                    svg.svg-slider-arrow(width="45px" height="30px")
                                        use(xlink:href="assets/images/icons/sprite.svg#portf_arrow_down")

                            .slider-demo__control-next
                                img.slider-demo__img(src="assets/images/my-works/work-3.png", alt="work-3")
                                a.slider-demo__link(href="#")
                                    svg.svg-slider-arrow(width="45px" height="30px")
                                        use(xlink:href="assets/images/icons/sprite.svg#portf_arrow_up")
                
            section.section.feedback
                //- .feedback-contaner
                .feedback__header
                    svg.svg-dash
                        use(xlink:href="assets/images/icons/sprite.svg#dash")
                    h1.title-main.feedback-header__title что обо мне говорят
                    svg.svg-dash
                        use(xlink:href="assets/images/icons/sprite.svg#dash")
                    //- h1.title-main говорят
                    svg.feedback__title-icon
                        use(xlink:href="assets/images/icons/sprite.svg#about_header")
                .feedback-contaner     
                    .feedback-content
                        .feedback-content__item
                            .feedback-content__contaner 
                                .feedback-content__icon
                                    i(class="fas fa-quote-left fa-2x")
                                .feedback-content__text
                                    p
                                        |   Этот парень проходил обучение веб-разработке не где-то,
                                        |   а в LoftSchool! 2 месяца только самых тяжелых испытаний
                                        |   и бессонных ночей!
                                .feedback-content__autor
                                    .feedback-content__name-icon
                                        .feedback__img(style='background-image:url(assets/images/my-works/dmitriy.jpg)')
                                            img.visuallyhidden(src='assets/images/my-works/dmitriy.jpg', alt='один')
                                        
                                    .feedback-content__name-desc
                                        .feedback-content__name-avatar Ковыльчук Дмитрий
                                        .feedback-content__name-prof Основатель Loftschool

                        .feedback-content__item
                            .feedback-content__contaner
                                .feedback-content__icon
                                    i(class="fas fa-quote-left fa-2x")
                                .feedback-content__text
                                    p
                                        |   Этот код выдержит любые испытания. Только
                                        |   пожалуйста, не загружается сайт на слишком старых
                                        |   браузерах!
                                .feedback-content__autor
                                    .feedback-content__name-icon
                                        .feedback__img(style='background-image:url(assets/images/my-works/vladimir.jpg)')
                                            img.visuallyhidden(src='assets/images/my-works/vladimir.jpg', alt='один')
                                        
                                    .feedback-content__name-desc
                                        .feedback-content__name-avatar Сабанцев Владимир
                                        .feedback-content__name-prof Преподаватель



                .feedback-form
                    .feedback-form__contaner
                        .connect__blured
                        .connect__form
                            .block__sub-title.connect__title Связаться со мной
                            form#connect-form.connect__form-tag
                                .connect__input
                                    .connect__input-block
                                        label.connect__elem
                                            input.connect__form-input.connect__form-input_name(type='text', name='user-name', placeholder='Имя')
                                    .connect__input-block
                                        label.connect__elem
                                            input.connect__form-input.connect__form-input_email(type='text', name='email' placeholder='Email')
                                    .connect__input-block
                                        label.connect__form-block
                                            textarea.connect__form-input.connect__form-input_textarea(name='comment' placeholder='Ваше сообщение')

                                .order__form-button
                                    input.order__button.order__form-button_main(name='#', type='submit', value='Отправить')
                                    input.order__button.order__form-button_in(name='#', type='reset', value='Очистить')

                .feedback__scroll-btn
                    include ../common/_arrow_up


        footer
            include ../common/_footer
        include ../common/_fullscreenmenu




